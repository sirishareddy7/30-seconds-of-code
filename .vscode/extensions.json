import React, { useState } from 'react';
import { Link } from 'react-router-dom';

const FarmerMarket = () => {
  const [products, setProducts] = useState([
    { id: 1, name: 'Fresh Apples', price: 5.99, quantity: 10 },
    { id: 2, name: 'Organic Carrots', price: 2.49, quantity: 20 },
    { id: 3, name: 'Free-Range Eggs', price: 3.99, quantity: 15 },
    { id: 4, name: 'chilli', price: 4.99, quantity: 40  }
  ]);

  const [cart, setCart] = useState([]);
  const [searchTerm, setSearchTerm] = useState('');

  const handleAddToCart = (product) => {
    setCart([...cart, product]);
  };

  const handleRemoveFromCart = (product) => {
    setCart(cart.filter((item) => item.id !== product.id));
  };

  const filteredProducts = products.filter((product) =>
    product.name.toLowerCase().includes(searchTerm.toLowerCase())
  );

  return (
    <div className="flex flex-col h-screen bg-green-100">
      <header className="bg-green-500 text-white p-4">
        <h1 className="text-lg font-bold">Farmer's Market</h1>
      </header>
      <main className="flex-1 overflow-y-scroll p-4">
        <input
          type="search"
          value={searchTerm}
          onChange={(e) => setSearchTerm(e.target.value)}
          placeholder="Search products"
          className="w-full p-2 mb-4 border border-gray-400 rounded"
        />
        <ul>
          {filteredProducts.map((product) => (
            <li key={product.id} className="mb-4">
              <div className="flex items-center">
                <div className="bg-gray-200 border-2 border-dashed rounded-xl w-16 h-16 mr-4" />
                <div>
                  <h2 className="text-lg font-bold">{product.name}</h2>
                  <p className="text-gray-600">${product.price}</p>
                  <p className="text-gray-600">Quantity: {product.quantity}</p>
                </div>
              </div>
              <button
                onClick={() => handleAddToCart(product)}
                className="bg-green-500 text-white p-2 rounded mt-2"
              >
                Add to Cart
              </button>
            </li>
          ))}
        </ul>
      </main>
      <footer className="bg-green-500 text-white p-4">
        <h2 className="text-lg font-bold">Cart</h2>
        <ul>
          {cart.map((product) => (
            <li key={product.id} className="mb-2">
              <div className="flex items-center">
                <div className="bg-gray-200 border-2 border-dashed rounded-xl w-16 h-16 mr-4" />
                <div>
                  <h2 className="text-lg font-bold">{product.name}</h2>
                  <p className="text-gray-600">${product.price}</p>
                </div>
              </div>
              <button
                onClick={() => handleRemoveFromCart(product)}
                className="bg-red-500 text-white p-2 rounded mt-2"
              >
                Remove
              </button>
            </li>
          ))}
        </ul>
        <p className="text-lg font-bold">
          Total: ${cart.reduce((acc, product) => acc + product.price, 0)}
        </p>
      </footer>
    </div>
  );
};

export default FarmerMarket;
 
